<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgView_estadio"
        android:layout_width="107dp"
        android:layout_height="114dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/estadio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgView_confrontos"
        android:layout_width="122dp"
        android:layout_height="118dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/agenda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_confrontos"
        android:layout_width="124dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text="@string/botao_confrontos"
        app:layout_constraintEnd_toEndOf="@+id/imgView_confrontos"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="@+id/imgView_confrontos"
        app:layout_constraintTop_toBottomOf="@+id/imgView_confrontos" />

    <Button
        android:id="@+id/button_estadios"
        android:layout_width="106dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:text="@string/botao_estadio"
        app:layout_constraintEnd_toEndOf="@+id/imgView_estadio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgView_estadio"
        app:layout_constraintTop_toBottomOf="@+id/imgView_estadio" />

    <Button
        android:id="@+id/button_listaTimes"
        android:layout_width="124dp"
        android:layout_height="43dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/botao_times"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgView_lista_times"
        android:layout_width="114dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/lista_times"
        app:layout_constraintBottom_toTopOf="@+id/button_listaTimes"
        app:layout_constraintEnd_toEndOf="@+id/button_listaTimes"
        app:layout_constraintStart_toStartOf="@+id/button_listaTimes"
        app:layout_constraintTop_toBottomOf="@+id/button_estadios" />

</android.support.constraint.ConstraintLayout>